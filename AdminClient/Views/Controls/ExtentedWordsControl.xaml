<UserControl x:Class="AdminClient.Views.Controls.ExtentedWordsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AdminClient.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            
        <Button Width="150" Height="40" Margin="0 5"  HorizontalAlignment="Left" Command="{Binding AddExtentedWordFormCommand}">Добавить слово</Button>
            
        <ListView ItemsSource="{Binding ExtentedWords}" Width="150"  Margin="0 5" HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Слово" Width="140" DisplayMemberBinding="{Binding }" />
                </GridView>
            </ListView.View>
        </ListView>
            
        </StackPanel>
    </Grid>
</UserControl>
