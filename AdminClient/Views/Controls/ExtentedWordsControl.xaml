<UserControl x:Class="AdminClient.Views.Controls.ExtentedWordsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AdminClient.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            
        <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBox Width="90" Text="{Binding AddExtentedWordRequest.WordText, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 5 0"/>
                <Button Width="100" Content="Добавить слово" Command="{Binding AddExtentedWordCommand}"/>
        </StackPanel>   
            
        <ListView ItemsSource="{Binding ExtentedWords}" Width="320"  Margin="0 5" HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Слово" Width="100" DisplayMemberBinding="{Binding WordText }" />
                    <GridViewColumn Header="Перевод" Width="100" DisplayMemberBinding="{Binding Translation }" />
                    
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Button x:Name="EditButton" Content="Edit" Height="25" Width="40" Command="{Binding DataContext.OpenEditWordForm,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Button x:Name="EditButton" Content="Delete" Height="25" Width="40" Command="{Binding DataContext.DeleteWordCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                </GridView>
            </ListView.View>
        </ListView>
        
        
            
        </StackPanel>
    </Grid>
</UserControl>
