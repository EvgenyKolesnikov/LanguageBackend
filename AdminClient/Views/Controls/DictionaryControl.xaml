<UserControl x:Class="AdminClient.Views.Controls.DictionaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AdminClient.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
           <TabControl>
            <TabItem Header="Словарь">
                
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5 5" HorizontalAlignment="Left">
                        <TextBlock Text="Слово:    " Margin="5 5"/>
                        <TextBox MinWidth="150" Text="{Binding AddWordRequest.BaseWord, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>   
                    
                    <StackPanel Orientation="Horizontal" Margin="5 5" HorizontalAlignment="Left">
                        <TextBlock Text="Перевод:" Margin="5 5"/>
                        <TextBox MinWidth="150" Text="{Binding AddWordRequest.Translation, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="5 5" HorizontalAlignment="Left">
                        <Button Width="100" Content="Добавить слово" Command="{Binding AddBaseWordCommand}" Margin="5 5" HorizontalAlignment="Left"/>
                        <TextBlock Text="Выбранное слово: " VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentBaseWord.Word}" VerticalAlignment="Center" FontWeight="Bold"/> 
                    </StackPanel>
                   
                <ListView ItemsSource="{Binding BaseWords}" Height="300"  Width="480">
                    
                    <ListView.View >
                        <GridView>
                                <GridViewColumn Header="Слово" Width="100" DisplayMemberBinding="{Binding Path=Word, Mode=TwoWay}" />
                                <GridViewColumn Header="Перевод" Width="100" DisplayMemberBinding="{Binding Path=Translation, Mode=TwoWay}" />
                           
                                <GridViewColumn >
                                    <GridViewColumn.CellTemplate >
                                        <DataTemplate >
                                            <Button x:Name="DeleteButton" Content="Select" Height="25" Width="40" Command="{Binding DataContext.SelectWordCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            
                            <GridViewColumn >
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate >
                                        <Button x:Name="EditButton" Content="Edit" Height="25" Width="40" Command="{Binding DataContext.OpenEditBaseWordForm,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn >
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate >
                                        <Button x:Name="DeleteButton" Content="Delete" Height="25" Width="40" Command="{Binding DataContext.DeleteBaseWordCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                                
                                <GridViewColumn >
                                    <GridViewColumn.CellTemplate >
                                        <DataTemplate >
                                            <Button x:Name="DeleteButton" Content="Translate" Height="25" Width="55" Command="{Binding DataContext.TranslateWordCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            
                        </GridView>
                    </ListView.View>
                </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
