<UserControl x:Class="AdminClient.Views.Controls.TextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AdminClient.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
         <StackPanel>
            
        <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBox Width="460" Height="100" Text="{Binding AddedText, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 5 0" TextWrapping="Wrap"/>
                <Button Width="100" Content="Добавить текст" Command="{Binding AddTextCommand}"/>
        </StackPanel>   
            
        <ListView Height="300" ItemsSource="{Binding Texts}" Width="460"  Margin="0 5" HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Текст" Width="140" DisplayMemberBinding="{Binding Content }" />
                    
                    <GridViewColumn Header="Обработано" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}/{1}">
                                            <Binding Path="WordsProcessed"/>
                                            <Binding Path="WordsCount"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Button x:Name="EditButton" Content="Select" Height="25" Width="50" Command="{Binding DataContext.GetWordByTextCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Button x:Name="EditButton" Content="Edit" Height="25" Width="40" Command="{Binding DataContext.OpenEditTextForm,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Button x:Name="DeleteButton" Content="Delete" Height="25" Width="40" Command="{Binding DataContext.DeleteTextCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Button x:Name="ProcessButton" Content="Process" Height="25" Width="45" Command="{Binding DataContext.ProcessTextCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                </GridView>
            </ListView.View>
        </ListView>
             
             
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <TextBox Width="460" Height="100" Text="{Binding CurrentText.Content, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 5 0" TextWrapping="Wrap"/>
        </StackPanel>  
            
        </StackPanel>
    </Grid>
</UserControl>
