<Window x:Class="AdminClient.Views.Windows.EditText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AdminClient.Views.Windows"
        mc:Ignorable="d"
        Title="EditText" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*" />
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,10,10,10" Grid.Row="0" Grid.Column="0" >
            <StackPanel Margin="0,5,0,5" HorizontalAlignment="Left" Width="258">
                <TextBlock Text="Text" />
                <TextBox Text="{Binding EditTextRequest.Content}" Height="200" Margin="0 10 0 0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Margin="5,5,5,5" Grid.RowSpan="2">
            <StackPanel Margin="0,0,10,0" Orientation="Horizontal" HorizontalAlignment="Center" Height="50">
                <Button Content="Cancel" Margin="10" Width="80" Click="Close_Click"/>
                <Button Content="Edit" Margin="10" Width="80" Click="Close_Click" Command="{Binding EditTextCommand}"  />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
